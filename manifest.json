{
  "manifest_version": 3,
  "name": "Codeforces Day Tag",
  "version": "1.0",
  "description": "Adds day of the week to Codeforces contest times",
  "author": "ChrisThaBot",
  "homepage_url": "https://yourwebsite.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://codeforces.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Codeforces Day Tag"
  }
}
